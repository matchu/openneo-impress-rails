- if @outfit
  - title(@outfit.name || t('.default_outfit_name'))
  - open_graph type: 'openneo-impress:outfit', title: yield(:title),
    url: outfit_url(@outfit)
  - if @outfit.image?
    - open_graph image: absolute_url(@outfit.image.url)

